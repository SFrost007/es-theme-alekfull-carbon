<?xml version="1.0" encoding="UTF-8"?>
<theme defaultView="Detailed">
   <formatVersion>4</formatVersion>
   <include>./_inc/icons/menuicons.xml</include>
	<include>./_inc/menu/menu.xml</include>

   <view name="system, basic, detailed, grid, video">
      <image name="background" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
      </image> 

      <helpsystem name="help">
         <fontPath>./_inc/fonts/Roboto-Light.ttf</fontPath>
         <fontSize>0.029</fontSize>     
         <pos>0.015 0.942</pos>      
         <textColor>ffffff</textColor>
         <iconColor>ffffff</iconColor>
      </helpsystem> 	  
   </view>

   <feature supported="carousel">
      <view name="system">
         <carousel name="systemcarousel">
            <type>horizontal</type>
            <pos>-0.660 -0.10</pos>
            <size>1.76 1</size>
            <logoScale>1.1</logoScale>
            <logoSize>0.25 0.25</logoSize>
            <color>00000000</color>
            <logoRotation>-6.5</logoRotation>
            <logoRotationOrigin>5.5 0.5</logoRotationOrigin>
            <logoAlignment>bottom</logoAlignment>
            <maxLogoCount>10</maxLogoCount>
			<scrollSound>./_inc/teste.mp3</scrollSound>
         </carousel>
         
         <text name="systemInfo">
            <pos>0.11 0.51</pos>
            <size>0.22 0.08</size>
            <backgroundColor>00000088</backgroundColor>
            <color>ffffff</color>
            <fontPath>./_inc/fonts/Oxygen-Regular.ttf</fontPath>
            <fontSize>0.0215</fontSize>
         </text> 
         
         <image name="mainOverlay" extra="true">
            <path>./_inc/assets/overlay.png</path>
            <size>1 0.9</size>
            <pos>0 0.1</pos>
            <origin>0 0</origin>
         </image>
      </view>
   </feature>

   <view name="basic,detailed,grid,video">
    <image name="detailedOverlay" extra="true">
       <origin>0 0</origin>
       <pos>0 0</pos>
       <size>1 1</size> 
       <path>./_inc/assets/detailed.png</path>
    </image>

    <video name="md_video">
      <pos>0.76 0.408</pos>
      <maxSize>0.46 0.436</maxSize>
      <origin>0.5 0.5</origin>
      <delay>0.8</delay>
      <showSnapshotNoVideo>true</showSnapshotNoVideo>
      <showSnapshotDelay>true</showSnapshotDelay>
      <loops>1</loops>
      <roundCorners>0.02</roundCorners>
    </video>
    <text name="md_lbl_genre, md_genre, md_lbl_rating, md_lbl_developer, md_developer, md_lbl_publisher, md_publisher, md_lbl_lastplayed, md_lbl_playcount, md_playcount, md_lbl_players, md_players, md_lbl_releasedate">
      <color>969696</color>
      <forceUppercase>0</forceUppercase>
      <fontPath>./_inc/fonts/Roboto-Light.ttf</fontPath>
      <fontSize>0.023</fontSize>
    </text>
    <text name="md_lbl_rating, md_lbl_publisher, md_publisher, md_lbl_lastplayed, md_lbl_playcount, md_playcount, md_lbl_releasedate, md_lbl_genre, md_lbl_developer">
      <pos>1 1</pos>
    </text>
    <datetime name="md_lastplayed, md_releasedate">
      <color>969696</color>
      <forceUppercase>0</forceUppercase>
      <fontPath>./_inc/fonts/Roboto-Light.ttf</fontPath>
      <fontSize>0.023</fontSize>
    </datetime>

    <text name="md_lbl_players">
      <pos>0.9 0.645</pos>
      <size>0.09 0</size>
    </text>
    <text name="md_players">
      <color>EFEFFF</color>
      <pos>0.965 0.645</pos>
      <size>0.02 0</size>
    </text>

    <text name="md_lbl_releasedate">
      <color>969696</color>
      <pos>0.53 0.645</pos>
      <size>0.2 0</size>
    </text>
    <datetime name="md_releasedate">
      <color>EFEFFF</color>
      <pos>0.63 0.645</pos>
      <size>0 0.033</size>
    </datetime>

    <text name="md_description">
      <pos>0.530 0.7</pos>
      <size>0.46 0.16</size>
      <color>969696</color>
      <forceUppercase>0</forceUppercase>
      <fontPath>./_inc/fonts/Roboto-Light.ttf</fontPath>
      <fontSize>0.023</fontSize>
    </text>

    <text name="md_developer">
      <color>EFEFFF</color>
      <pos>0.53 0.86</pos>
      <size>0.30 0.05</size>
      <alignment>left</alignment>
      <fontSize>0.025</fontSize>
    </text>
    <rating name="md_rating">
      <pos>0.88 0.87</pos>
      <size>0.05 0.03</size>
      <color>FFFF00</color>
      <unfilledColor>FFFFFF</unfilledColor>
    </rating>

    <textlist name="gamelist">
      <selectorColor>1c1c1c</selectorColor>
      <selectedColor>8b0000</selectedColor>
      <primaryColor>969696</primaryColor>
      <secondaryColor>808080</secondaryColor>
      <fontPath>./_inc/fonts/Roboto-Light.ttf</fontPath>
      <forceUppercase>1</forceUppercase>
      <pos>0.021 0.18</pos>
      <size>0.489 0.73</size>
      <alignment>left</alignment>
      <horizontalMargin>0.00</horizontalMargin>
      <fontSize>0.03</fontSize>
      <horizontalMargin>0.005</horizontalMargin>
    </textlist>

    <image name="logo">
      <pos>0 0</pos>
      <maxSize>0 0</maxSize>
    </image>

    <image name="ext_systemlogo" extra="true">
      <path>./${system.theme}/_inc/logo.png</path>
      <path>./${system.theme}/_inc/logo.svg</path>
      <pos>0.5 0.074</pos>
      <maxSize>0.3 0.120</maxSize>
      <origin>0.5 0.5</origin>
    </image>
   </view>
</theme>
